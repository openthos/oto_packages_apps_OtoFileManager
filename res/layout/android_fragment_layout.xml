                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_usb_avail_size_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/text_available"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_usb_avail_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="0.3" />

        <RelativeLayout
            android:id="@+id/rl_mount_space_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/sd_page_bg_selector"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_mount_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@mipmap/usb_service" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_mount_two"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_usb_title_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/text_removable_disk2"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
                <ProgressBar
                    android:id="@+id/pb_usb_two"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="190dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:progressDrawable="@drawable/my_progressbar" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_usb_total_size_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_size"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_usb_total_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_usb_avail_size_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/text_available"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_usb_avail_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="0.3" />

        <RelativeLayout
            android:id="@+id/rl_mount_space_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/sd_page_bg_selector"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:visibility="invisible">
            <ImageView
                android:id="@+id/iv_mount_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@mipmap/usb_service" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_mount_three"
