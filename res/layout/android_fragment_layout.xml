<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:id="@+id/fragment_sds_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/text_fast_access"
                android:textSize="13sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:background="#E6E6E6"/>
        </LinearLayout>
        <org.openthos.filemanager.drag.HomeGridView
            android:id="@+id/grid_fast_access"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/home_item_padding"
            android:layout_marginRight="@dimen/home_item_padding"
            android:visibility="visible"
            android:numColumns="auto_fit"
            android:columnWidth="@dimen/home_item_length"
            android:stretchMode="columnWidth"
            android:listSelector="@android:color/transparent"
            android:weightSum="4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/text_local_storage"
                android:textSize="13sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:background="#E6E6E6"/>
        </LinearLayout>
        <org.openthos.filemanager.drag.HomeGridView
            android:id="@+id/grid_local_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/home_item_padding"
            android:layout_marginRight="@dimen/home_item_padding"
            android:visibility="visible"
            android:numColumns="auto_fit"
            android:columnWidth="@dimen/home_item_length"
            android:stretchMode="columnWidth"
            android:listSelector="@android:color/transparent"
            android:weightSum="4"/>
        <LinearLayout
            android:id="@+id/ll_mobile_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/text_mobile_device"
                android:textSize="13sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:background="#E6E6E6"/>
        </LinearLayout>
        <org.openthos.filemanager.drag.HomeGridView
            android:id="@+id/grid_usb_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/home_item_padding"
            android:layout_marginRight="@dimen/home_item_padding"
            android:visibility="visible"
            android:numColumns="auto_fit"
            android:columnWidth="@dimen/home_item_length"
            android:stretchMode="columnWidth"
            android:listSelector="@android:color/transparent"
            android:weightSum="4"/>
        <LinearLayout
            android:id="@+id/ll_auto_mount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/automount"
                android:textSize="13sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:background="#E6E6E6"/>
        </LinearLayout>
            <org.openthos.filemanager.drag.HomeGridView
            android:id="@+id/grid_auto_mount_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/home_item_padding"
                android:layout_marginRight="@dimen/home_item_padding"
                android:visibility="visible"
                android:numColumns="auto_fit"
                android:columnWidth="@dimen/home_item_length"
                android:stretchMode="columnWidth"
                android:listSelector="@android:color/transparent"
                android:weightSum="4"/>
    </LinearLayout>
</ScrollView>
