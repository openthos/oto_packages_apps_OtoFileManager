<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">

    <com.openthos.filemanager.drag.DragGridView
        android:id="@+id/personal_fragment_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:verticalSpacing="10dp"
        android:numColumns="8"
        android:nextFocusUp="@id/personal_fragment_grid"
        android:nextFocusLeft="@id/personal_fragment_grid"
        android:nextFocusRight="@id/personal_fragment_grid"
        android:nextFocusDown="@id/personal_fragment_grid"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

</LinearLayout>
