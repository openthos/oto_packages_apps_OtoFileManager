<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/file_browse_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_bg_shape">

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="22sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_sys_fl"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
        <org.openthos.filemanager.component.DragListView
            android:id="@+id/file_path_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:fastScrollEnabled="true"
            android:scrollbars="none"
            android:nextFocusUp="@id/file_path_list"
            android:nextFocusLeft="@id/file_path_list"
            android:nextFocusRight="@id/file_path_list"
            android:nextFocusDown="@id/file_path_list"
            android:listSelector="@android:color/transparent"
            android:visibility="gone"/>

        <org.openthos.filemanager.component.DragGridView
            android:id="@+id/file_path_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:visibility="gone"
            android:numColumns="auto_fit"
            android:columnWidth="135dp"
            android:horizontalSpacing="20dp"
            android:verticalSpacing="20dp"
            android:stretchMode="columnWidth"
            android:nextFocusUp="@id/file_path_grid"
            android:nextFocusLeft="@id/file_path_grid"
            android:nextFocusRight="@id/file_path_grid"
            android:nextFocusDown="@id/file_path_grid"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" />

        <LinearLayout
            android:id="@+id/empty_view"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:src="@drawable/empty_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_file"
                android:textSize="27px"
                android:singleLine="true" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sd_not_available_page"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:src="@drawable/sd_not_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25px" />

            <TextView
                android:text="@string/enable_sd_card"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="22px"
                android:gravity="center" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
